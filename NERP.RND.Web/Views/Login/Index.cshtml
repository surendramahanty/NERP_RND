<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RND</title>
    <link rel="stylesheet" href="styles.fa541da6c0ec2766cb96.css">
</head>
<body>
    <div class="wrapper">
        <header class="main-header">
            <a class="logo" href="/"><img src="images/logo.svg" style="height: 35px;"></a>
            <nav class="navbar" role="navigation"></nav>
        </header>

        <div class="content-wrapper" style="margin-left:0px; min-height: calc(100vh - 102px);">
            <div class="login-box">
                <div style="background-color: white">
                    <div class="login-logo">
                        <h2>Login</h2><hr />
                        @if (!string.IsNullOrEmpty(@ViewBag.Message))
                        {
                            <div class="form-group">
                                <h4 style="color: red">@ViewBag.Message</h4>
                            </div>
                        }
                    </div>
                    <div class="login-box-body">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label>Login Id</label>
                                <input class="form-control input-sm" id="LoginId" name="LoginId" autocomplete="off" type="text" value="">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input id="Password" class="form-control input-sm" name="Password" autocomplete="off" type="password" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-block" style="background-color: #314183; color: #ffffff">Login</button>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

        <footer class="main-footer hidden-xs" style="margin-left:0px">
            <strong><span>&copy; 2019 Pitney Bowes</span></strong>
        </footer>
    </div>

</body>
</html>
